<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Smart Garden Dashboard</title>
		<!-- Bootstrap CSS -->
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
			rel="stylesheet"
		/>
		<!-- FontAwesome -->
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
		/>
		<!-- Custom CSS -->
		<link rel="stylesheet" href="css/style.css" />
	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-dark">
			<div class="container-fluid">
				<a class="navbar-brand" href="./">Smart Garden IUH</a>
				<button
					class="navbar-toggler"
					type="button"
					data-bs-toggle="collapse"
					data-bs-target="#navbarNav"
					aria-controls="navbarNav"
					aria-expanded="false"
					aria-label="Toggle navigation"
				>
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav ms-auto gap-3">
						<li class="nav-item">
							<button id="" class="btn btn-success">
								<a href="./health" style="color: white; text-decoration: none"
									>Sức khỏe cây trồng</a
								>
							</button>
						</li>
						<li class="nav-item">
							<button id="" class="btn btn-success">
								<a href="./setting" style="color: white; text-decoration: none"
									>Cài đặt</a
								>
							</button>
						</li>
						<li class="nav-item">
							<button id="" class="btn btn-success">
								<a href="./history" style="color: white; text-decoration: none"
									>Lịch sử</a
								>
							</button>
						</li>
					</ul>
				</div>
			</div>
		</nav>

		<!-- History Data Table -->
		<div class="container my-5">
			<h3 class="text-center mb-4">History Data</h3>
			<!-- Search Box -->
			<div class="mb-3">
				<input
					type="date"
					id="searchInput"
					class="form-control"
					placeholder="Search by Date & Time"
				/>
			</div>
			<div class="table-responsive">
				<table class="table table-striped table-hover">
					<thead class="table-success">
						<tr>
							<th>Độ ẩm đất</th>
							<th>Nhiệt độ</th>
							<th>Độ ẩm</th>
							<th>Mực nước</th>
							<th>Ngày & Giờ</th>
						</tr>
					</thead>
					<tbody id="dataTableBody">
						<% for (let i = 0; i < result.timestamps.length; i++) { %>
						<tr>
							<td><%= result.soilMoistures[i] %>%</td>
							<td><%= result.temperatures[i] %>°C</td>
							<td><%= result.humidities[i] %>%</td>
							<td><%= result.waterLevel[i] %>%</td>
							<td><%= result.timestamps[i] %></td>
						</tr>
						<% } %>
					</tbody>
				</table>
			</div>
		</div>

		<!-- Footer -->
		<footer
			class="text-white text-center py-3 mt-5"
			style="background-color: #2e7d32"
		>
			<div class="container">
				<p class="mb-0">© 2024 Smart Garden IUH. All rights reserved.</p>
				<p class="mb-0">
					Developed by
					<a href="#" class="text-white fw-bold"
						>Nguyễn Minh Ý & Phạm Quốc Trung</a
					>
				</p>
			</div>
		</footer>

		<!-- Scripts -->
		<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/lottie-web/5.9.6/lottie.min.js"></script>
		<script src="js/history.js"></script>
	</body>
</html>
